@{
    Layout = "_Layout";
}
<form asp-controller="Home" asp-action="DisplayStudent" method="post">
    <table>
        <tr>
            <td>First Name:</td>
            <td><input type="text" name="firstName" /></td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td><input type="text" name="lastName" /></td>
        </tr>
        <tr>
            <td>StudentID:</td>
            <td><input type="number" min="0" name="studentID" /></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><input type="email" name="email" /></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td><input type="password" name="password" /></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><input type="text" name="description" /></td>
        </tr>

    </table>
    <input type="submit" value="Create" />

</form>
